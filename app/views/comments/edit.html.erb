<h1>Edytuj komentarz</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Zmień' %>
  </p>
<% end %>

<%= link_to 'Pokaż', @comment %> |
<%= link_to 'Wróć', comments_path %>

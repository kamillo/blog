<%= image_tag @post.photo.url(:standart) if @post.photo?%>

<% div_for @post do %>

  <h2><%= link_to_unless_current h(@post.title), @post %></h2>
  <%= simple_format h(@post.description) %>
<% end %>
<p>
  <%= link_to 'Edytuj', edit_post_path(@post)%> |
  <%= link_to 'Usuń', @post, :method => :delete, :confirm => "Czy jesteś pewien?" %>|
  <%= link_to 'Zobacz wszystkie posty', posts_path %>
</p>

<h2> Komentarze </h2>

<div id=comments>
  <%=render :partial => @post.comments%>
</div>

<% form_for [@post, Comment.new] do |f| %>
  <p>
    <%= f.label :author, "Autor"%><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body, "Treść" %><br />
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Dodaj" %></p>
<% end %>
